.page-header {
  display: flex;
  justify-content: center;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 10rpx;
}

.page-header-text {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
}

.page-body {
  display: flex;
  flex: 1;
}

.items {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}

.items .poster {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}

.items .meta {
  flex: 1;
}

.items .title, .items .subTitle {
  display: block;
  margin-bottom: 14rpx;
}

.items .title {
  font-size: 32rpx;
}

.items .subTitle {
  font-size: 22rpx;
  color: #c0c0c0;
}

.items .directors {
  font-size: 26rpx;
  color: #999;
}

.items .rating {
  font-size: 28rpx;
  font-weight: bold;
  color: red;
}
